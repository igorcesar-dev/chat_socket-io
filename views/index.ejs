<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
</head>
<style>
    h1 {
        text-align: center;
        color: white;
    }
    body {
        background-color: rgb(15, 15, 15);
        padding: 30px;
    }

    #chat {
        max-height: 500px;
        min-height: 500px;
        background-color: rgb(44, 44, 44);
        overflow-y: scroll;
        border-radius: 10px;
        color: white;
        padding: 20px;
    }
</style>

<body>
    <div class="d-grid gap-2 col-6 mx-auto">
        <h1>Chat ICS</h1>
        <div id="chat">

        </div>

        <input class="form-control" type="text" id="msg" placeholder="Digite uma mensagem">
        <input class="form-control" type="text" name="" id="username" placeholder="Seu nome de usuÃ¡rio">


        <button class="btn btn-success" onclick="enviar()">Enviar</button>

    </div>
    <p id="resultado"></p>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.6.1/socket.io.js"></script>
<script>
    var socket = io("http://localhost:3000");
    socket.on("disconnect", () => {
        console.log("Desconectado")
    });

    socket.on("showmsg", (data) => {
        console.log(data);
        var chat = document.getElementById("chat");
        var p = document.createElement("p");
        p.innerHTML = data.username + ": " + data.msg;
        chat.append(p)
    });

    function enviar() {
        var msgField = document.getElementById("msg");
        var usernameField = document.getElementById("username");

        var msg = msgField.value;
        var username = usernameField.value;

        socket.emit("msg", { msg: msg, username: username });
    }

</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
    crossorigin="anonymous"></script>

</html>